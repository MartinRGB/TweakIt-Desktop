which -s brew
if [[ $? != 0 ]] ; then
    # Install Homebrew
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)";brew cask install android-platform-tools;brew install scrcpy;brew install ffmpeg;
else
    brew update;brew cask install android-platform-tools;brew install scrcpy;brew install ffmpeg;
fi