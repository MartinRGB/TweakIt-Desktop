{
    "plugins": [
      "babel-plugin-macros",
      [
        "@emotion/babel-plugin-jsx-pragmatic",
        {
          "export": "jsx",
          "import": "__cssprop",
          "module": "@emotion/core"
        }
      ],
      ["babel-plugin-transform-react-jsx", { "pragma": "__cssprop" }],
      ["@babel/plugin-transform-runtime"],
      ["@babel/plugin-proposal-class-properties"]
    ]
  }